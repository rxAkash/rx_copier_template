[virtualenvs]
in-project = true
path = ".venv"

[tool.poetry]
name = "{{ project_name }}"
version = "0.0.1"
description = "{{ project_description }}"
authors = [""]
readme = "README.md"

[tool.poetry.dependencies]
python = "^{{ python_version }}"
python-dateutil = "2.9.0"
fastapi = "0.110.0"
uvicorn = "0.27.1"

[tool.poetry.dev-dependencies]
pytest="^7.4.2"
pytest-cov="^3.0.0"
black = "^23.3.0"
isort = "^5.12.0"
flake8 = "^6.0.0"
flake8-pyproject = "^1.2.3"
mypy = "^1.3.0"

[build-system]
requires = ["poetry-core"]